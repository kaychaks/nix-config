#!/usr/bin/env bash

PKGNAME="${1:-$(basename $(pwd))}"
shift 1

if [ $(find . -name "*.cabal" | wc -l) -eq 0 ]; then
    nix-shell -p "haskell.compiler.ghc864" --command "cabal init"
fi

cat > default.nix <<EOF
    { nixpkgs ? import <nixpkgs> {}, compiler ? "ghc864"}:
    let
    inherit (nixpkgs) pkgs;
    haskellPackages = pkgs.haskell.packages.\${compiler};
    in
        {
            $PKGNAME = haskellPackages.developPackage {
                returnShellEnv = false;
                root = ./.;
            };
        }
EOF

cat > shell.nix <<EOF
    { nixpkgs ? import <nixpkgs> {}, compiler ? "ghc864", withHoogle ? false}:
    let
    inherit (nixpkgs) pkgs;
    haskellPackages = pkgs.haskell.packages.\${compiler};
    project = import ./. { inherit nixpkgs compiler; };
    in
    haskellPackages.shellFor {
      inherit withHoogle;
      packages = p: [ project.$PKGNAME ];
      buildInputs = [ haskellPackages.ghcid haskellPackages.cabal-install ];
    }
EOF

nix-shell --command "cabal clean"
nix-shell --command "cabal new-configure $@"


